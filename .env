# URL pública da aplicação (Railway fornece automaticamente)
SERVICE_URL_RAILS=https://meuapp-production.up.railway.app

# Ambiente
NODE_ENV=production
RAILS_ENV=production
INSTALLATION_ENV=docker
DEFAULT_LOCALE=pt_BR

# URLs internas e front-end
FRONTEND_URL=${SERVICE_URL_RAILS}
INTERNAL_HOST_URL=http://rails:3000

# Postgres (substitua pelos dados do plugin Railway)
POSTGRES_HOST=containers-us-west-123.railway.app
POSTGRES_PORT=5432
POSTGRES_USERNAME=usuario_postgres
POSTGRES_PASSWORD=senha_postgres
POSTGRES_DATABASE=chatwoot_production

# Rails Secret Key
SECRET_KEY_BASE=gerar_com_rails_secret_ou_substituir_por_valor_real

# Redis (substitua pelos dados do plugin Railway)
REDIS_URL=redis://containers-us-west-456.railway.app:6379
REDIS_PASSWORD=senha_redis

# Baileys API
BAILEYS_PROVIDER_DEFAULT_CLIENT_NAME=Chatwoot
BAILEYS_PROVIDER_DEFAULT_URL=http://baileys-api:3025
BAILEYS_PROVIDER_DEFAULT_API_KEY=chave_api_baileys
BAILEYS_PROVIDER_USE_INTERNAL_HOST_URL=true

# Email e Resend
MAILER_SENDER_EMAIL=seu_email@example.com
RESEND_API_KEY=sua_chave_resend

# Logging (opcional)
LOG_LEVEL=debug
BAILEYS_LOG_LEVEL=error
